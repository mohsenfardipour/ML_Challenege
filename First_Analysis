import numpy as np
from scipy import stats
import pandas as pd

# Load the dataset (first three columns)
data = np.array([line.split()[:3] for line in open("D:\\RML\\challenge.txt").readlines()], dtype=float)
df = pd.DataFrame(data, columns=['Feature 1', 'Feature 2', 'Feature 3'])
# Calculate statistics
mean = df.mean()
median = df.median()
std = df.std()

# Create a summary table
stats_summary = pd.DataFrame({'Mean': mean, 'Median': median, 'Standard Deviation': std})
print("Statistical Summary:")
print(stats_summary)

# Perform Shapiro-Wilk test
for column in df.columns:
    stat, p_value = stats.shapiro(df[column])
    print(f"Shapiro-Wilk Test for {column}: Statistic={stat:.4f}, p-value={p_value:.4f}")
    
# Calculate skewness and kurtosis
skewness = df.skew()
kurtosis = df.kurtosis()
print("\nSkewness:")
print(skewness)
print("\nKurtosis:")
print(kurtosis)

# Compute correlation matrix
correlation_matrix = df.corr()
print("\nCorrelation Matrix:")
print(correlation_matrix)